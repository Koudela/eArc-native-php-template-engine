{
    "name": "earc/native-php-template-engine",
    "description": "Native object oriented php template engine.",
    "type": "library",
    "license": "MIT",
    "version": "1.0",
    "authors": [
        {
            "name": "Thomas Koudela",
            "email": "thomas@koudela.net"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable" : true,
    "require": {
        "php": "^8.0",
        "earc/parameter-transformer": "^0.0.1"
    },
    "autoload": {
        "psr-4": {
            "eArc\\NativePHPTemplateEngine\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "eArc\\NativePHPTemplateEngineTests\\": "tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "symfony/var-dumper": "^5.2"
    }
}
